<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/patternCard"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/previewImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@android:color/transparent"
            android:transitionName="@string/transition.preview_image"
            android:contentDescription="Preview for pattern"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/previewImage"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/patternTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:theme="@style/AppTheme.CardViewTitleText"/>

            <TextView
                android:id="@+id/patternAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textStyle="italic"
                android:theme="@style/AppTheme.CardViewSubtitleText"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>